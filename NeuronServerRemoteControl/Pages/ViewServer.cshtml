@page
@model NeuronServerRemoteControl.Pages.ViewServerModel
@{
}


<form class="form-horizontal" method="post">
    @Html.HiddenFor(m => m.ServerName)
    <div class="form-group">
        <label for="Name" class="col-sm-2 control-label">Command text</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="CommandText">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Send command</button>
        </div>
    </div>
</form>


<p>Предыдущие запросы</p>
@if (Model.SentCommandsCount > 0)
{
    foreach (var item in Model.SentCommands)
    {
        <p>@($"{item.CreateDate.ToString("dd.MM.yyyy HH:mm:ss")} {item.CommandText}")</p>
        <p>@item.ResponseText</p>
    }
}
else
{
    <p>Запросов нет</p>
}